<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <View
        android:layout_height="2dp"
        android:background="#ff909090" />

    <TableRow
        android:layout_height="wrap_content"
        android:background="#e4e3e3"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:text="A"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_column="2"
            android:padding="3dp"
            android:text="B"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_column="3"
            android:text="C"
            android:textAlignment="center"
            android:textStyle="bold" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff909090" />

    <TableRow
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_column="0"
            android:text="I"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cur_val_I_A"
            android:layout_column="1"
            android:text="----"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/cur_val_I_B"
            android:layout_column="2"
            android:text="----"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/cur_val_I_C"
            android:layout_column="3"
            android:text="----"
            android:textAlignment="center" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff909090" />

    <TableRow
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_column="0"
            android:text="U"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cur_val_U_A"
            android:layout_column="1"
            android:text="----"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/cur_val_U_B"
            android:layout_column="2"
            android:text="----"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/cur_val_U_C"
            android:layout_column="3"
            android:padding="3dp"
            android:text="----"
            android:textAlignment="center" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff909090" />

    <TableRow
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:text="RSSI"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssi_value"
            android:layout_column="2"
            android:text="----"
            android:textAlignment="center" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff909090" />
</TableLayout>
